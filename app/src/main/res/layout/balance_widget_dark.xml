<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/widget_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:clickable="true"
	android:focusable="true">

	<ImageView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:src="@mipmap/ic_widget_dark"
		android:contentDescription="@null"
		android:scaleType="fitCenter"
		android:alpha="0.8"/>

	<TextView
		android:id="@+id/widget_text"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="@dimen/widget_text_padding"
		android:layout_marginLeft="@dimen/widget_text_padding"
		android:gravity="center"
		android:text="@string/widget_text_loading"
		android:textColor="#FFF"
		android:textStyle="bold"
		android:textSize="@dimen/widget_text_size"/>

	<ImageButton
		android:id="@+id/widget_settings"
		android:layout_width="@dimen/widget_settings_size"
		android:layout_height="@dimen/widget_settings_size"
		android:padding="@dimen/widget_settings_padding"
		android:layout_marginBottom="@dimen/widget_settings_padding"
		android:layout_gravity="right|bottom"
		android:background="@android:color/transparent"
		android:src="@drawable/ic_settings_black"
		android:tint="#FFF"
		android:contentDescription="@string/settings"/>

</FrameLayout>