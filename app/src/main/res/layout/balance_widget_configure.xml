<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:animateLayoutChanges="true"
	android:orientation="vertical"
	android:padding="16dp">

	<android.support.design.widget.TextInputLayout
		android:id="@+id/appwidget_card_serial"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:animateLayoutChanges="true"
		android:layout_marginTop="8dp">
		<android.support.design.widget.TextInputEditText
			android:hint="@string/card_serial_hint"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="20sp"
			android:maxLength="10"
			android:inputType="number"/>
	</android.support.design.widget.TextInputLayout>

	<android.support.design.widget.TextInputLayout
		android:id="@+id/appwidget_pan_4_digits"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:animateLayoutChanges="true"
		android:layout_marginTop="8dp">
		<android.support.design.widget.TextInputEditText
			android:hint="@string/pan_4_digits_hint"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="20sp"
			android:maxLength="4"
			android:inputType="number"/>
	</android.support.design.widget.TextInputLayout>

	<TextView
		android:id="@+id/update_duration_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:textSize="16sp"/>

	<SeekBar
		style="@style/Widget.AppCompat.SeekBar.Discrete"
		android:id="@+id/update_duration_seekbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:max="11"
		android:progress="3"/>

	<Button
		android:id="@+id/save_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:text="@string/save_widget"
		android:textSize="16sp"
		android:enabled="false"/>

</LinearLayout>